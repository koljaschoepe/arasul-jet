{
  "info": {
    "name": "ARASUL Platform API Tests",
    "description": "Comprehensive API test collection for ARASUL Platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login - Success",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has token', function () {",
                  "    const json = pm.response.json();",
                  "    pm.expect(json).to.have.property('token');",
                  "    pm.expect(json.token).to.be.a('string');",
                  "    pm.environment.set('token', json.token);",
                  "});",
                  "",
                  "pm.test('Token expires in 24 hours', function () {",
                  "    const json = pm.response.json();",
                  "    pm.expect(json.expires_in).to.equal(86400);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"{{admin_password}}\"\n}"
            },
            "url": "{{base_url}}/auth/login"
          }
        },
        {
          "name": "Login - Invalid Credentials",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 401', function () {",
                  "    pm.response.to.have.status(401);",
                  "});",
                  "",
                  "pm.test('Error message present', function () {",
                  "    const json = pm.response.json();",
                  "    pm.expect(json).to.have.property('error');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"wrongpassword\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": "{{base_url}}/auth/login"
          }
        }
      ]
    },
    {
      "name": "System",
      "item": [
        {
          "name": "Get System Status",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has required fields', function () {",
                  "    const json = pm.response.json();",
                  "    pm.expect(json).to.have.all.keys('status', 'llm', 'embeddings', 'n8n', 'minio', 'postgres', 'self_healing_active', 'last_self_healing_event', 'warnings', 'criticals', 'timestamp');",
                  "});",
                  "",
                  "pm.test('Status is valid', function () {",
                  "    const json = pm.response.json();",
                  "    pm.expect(json.status).to.be.oneOf(['OK', 'WARNING', 'CRITICAL']);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/system/status"
          }
        },
        {
          "name": "Health Check",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response time is less than 200ms', function () {",
                  "    pm.expect(pm.response.responseTime).to.be.below(200);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/health"
          }
        }
      ]
    },
    {
      "name": "Metrics",
      "item": [
        {
          "name": "Get Live Metrics",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Has all metric fields', function () {",
                  "    const json = pm.response.json();",
                  "    pm.expect(json).to.have.all.keys('cpu', 'ram', 'gpu', 'temperature', 'disk', 'timestamp');",
                  "});",
                  "",
                  "pm.test('Metrics are within valid ranges', function () {",
                  "    const json = pm.response.json();",
                  "    pm.expect(json.cpu).to.be.within(0, 100);",
                  "    pm.expect(json.ram).to.be.within(0, 100);",
                  "    pm.expect(json.gpu).to.be.within(0, 100);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/metrics/live"
          }
        }
      ]
    },
    {
      "name": "Database Pool",
      "item": [
        {
          "name": "Get Pool Stats",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Has pool statistics', function () {",
                  "    const json = pm.response.json();",
                  "    pm.expect(json.pool_stats).to.have.property('totalCount');",
                  "    pm.expect(json.pool_stats).to.have.property('idleCount');",
                  "    pm.expect(json.pool_stats).to.have.property('totalQueries');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/database/pool"
          }
        }
      ]
    }
  ]
}
