{
  "name": "arasul-dashboard-frontend",
  "version": "1.0.0",
  "description": "Arasul Platform Dashboard Frontend",
  "private": true,
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1",
    "recharts": "^2.10.3",
    "axios": "^1.6.5",
    "react-icons": "^5.0.1",
    "date-fns": "^4.1.0",
    "react-markdown": "^9.0.1",
    "remark-gfm": "^4.0.0",
    "dompurify": "^3.0.8",
    "mermaid": "^10.9.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:ci": "react-scripts test --watchAll=false --coverage --coverageReporters=lcov --coverageReporters=text",
    "lint": "eslint src/ --ext .js,.jsx",
    "lint:fix": "eslint src/ --ext .js,.jsx --fix",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "react-scripts": "^5.0.1",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2"
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!(axios|react-markdown|remark-.*|unified|bail|is-plain-obj|trough|vfile.*|unist-util-.*|mdast-util-.*|micromark.*|decode-named-character-reference|character-entities.*|ccount|escape-string-regexp|markdown-table|devlop|hast-util-.*|property-information|space-separated-tokens|comma-separated-tokens|estree-util-.*|style-to-object|inline-style-parser|html-url-attributes|trim-lines|zwitch|longest-streak)/)"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 20,
        "functions": 20,
        "lines": 25,
        "statements": 25
      }
    }
  }
}
